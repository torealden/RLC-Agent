# =============================================================================
# RLC Master Agent System - Environment Configuration Template
# Round Lakes Commodities - AI Business Partner
# =============================================================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit the actual .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# LLM CONFIGURATION
# -----------------------------------------------------------------------------
# Provider: 'ollama' for local models, 'openai' for OpenAI API
LLM_PROVIDER=ollama

# Ollama settings (if using local LLM)
OLLAMA_MODEL=llama2:13b
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI settings (if using OpenAI)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# LLM behavior
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# -----------------------------------------------------------------------------
# NOTION INTEGRATION
# -----------------------------------------------------------------------------
# Get your API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Database IDs (found in the URL when viewing each database)
# Format: https://notion.so/workspace/database-name-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
NOTION_TASKS_DB=
NOTION_MEMORY_DB=
NOTION_INTERACTIONS_DB=
NOTION_WIKI_DB=

# -----------------------------------------------------------------------------
# GOOGLE API CONFIGURATION
# -----------------------------------------------------------------------------
# Directory containing OAuth credentials JSON files
GOOGLE_CREDENTIALS_DIR=./config

# Credential file names (download from Google Cloud Console)
GMAIL_WORK_CREDENTIALS=gmail_work_credentials.json
GMAIL_PERSONAL_CREDENTIALS=gmail_personal_credentials.json
CALENDAR_CREDENTIALS=calendar_credentials.json

# Directory to store OAuth tokens
GOOGLE_TOKEN_DIR=./config/tokens

# -----------------------------------------------------------------------------
# EXTERNAL DATA API KEYS
# -----------------------------------------------------------------------------
# USDA Market News API (sign up at: https://mymarketnews.ams.usda.gov/mymarketnews-api)
USDA_API_KEY=

# Census Bureau API (sign up at: https://api.census.gov/data/key_signup.html)
CENSUS_API_KEY=

# OpenWeatherMap API (sign up at: https://openweathermap.org/api)
WEATHER_API_KEY=

# API Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_BACKOFF=2.0

# -----------------------------------------------------------------------------
# USER CONFIGURATION
# -----------------------------------------------------------------------------
USER_NAME=
BUSINESS_NAME=Round Lakes Commodities
USER_EMAIL=
USER_TIMEZONE=America/Chicago
WORKING_HOURS_START=8
WORKING_HOURS_END=18
PREFERRED_MEETING_DURATION=30

# -----------------------------------------------------------------------------
# AGENT BEHAVIOR
# -----------------------------------------------------------------------------
# Autonomy Level: 1=supervised (asks approval), 2=partial, 3=autonomous
AUTONOMY_LEVEL=1

# Approval requirements (true/false)
REQUIRE_CALENDAR_APPROVAL=false
REQUIRE_EMAIL_APPROVAL=true

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (for data agents)
# -----------------------------------------------------------------------------
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_USER=
DB_PASSWORD=
DB_NAME=commodities_db
SQLITE_PATH=./data/rlc_commodities.db

# =============================================================================
# SETUP INSTRUCTIONS:
# =============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in all required values (marked with empty values above)
# 3. For Google OAuth:
#    - Create project at https://console.cloud.google.com/
#    - Enable Gmail API and Google Calendar API
#    - Create OAuth 2.0 credentials and download JSON files
#    - Place JSON files in the config/ directory
# 4. For Notion:
#    - Create integration at https://www.notion.so/my-integrations
#    - Share your databases with the integration
#    - Copy database IDs from their URLs
# 5. Run: python setup_auth.py to complete Google OAuth flow
# 6. Run: python initialize_system.py to verify configuration
# 7. Run: python launch.py to start the assistant
# =============================================================================
