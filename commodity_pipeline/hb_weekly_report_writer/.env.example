# HB Weekly Report Writer Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATA SOURCE CONFIGURATION
# =============================================================================

# Primary data source: "dropbox" or "database"
HB_DATA_SOURCE=dropbox

# =============================================================================
# DROPBOX CONFIGURATION
# =============================================================================

# Dropbox OAuth2 Access Token (short-lived)
DROPBOX_ACCESS_TOKEN=

# Dropbox App Credentials (for refresh token flow)
DROPBOX_APP_KEY=
DROPBOX_APP_SECRET=
DROPBOX_REFRESH_TOKEN=

# =============================================================================
# DATABASE CONFIGURATION (for future database migration)
# =============================================================================

# Database type: postgresql, mysql, sqlite
HB_DB_TYPE=postgresql

# Connection details
HB_DB_HOST=localhost
HB_DB_PORT=5432
HB_DB_NAME=hb_market_data
HB_DB_USER=
HB_DB_PASSWORD=

# =============================================================================
# API MANAGER CONFIGURATION
# =============================================================================

# URL of the API Manager service
API_MANAGER_URL=http://localhost:8000

# API Manager authentication key
API_MANAGER_KEY=

# USDA AMS API key (for direct fallback)
USDA_API_KEY=

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# LLM provider: openai, anthropic, ollama
LLM_PROVIDER=openai

# Model to use
LLM_MODEL=gpt-4

# OpenAI API key
OPENAI_API_KEY=

# Ollama configuration (if using Ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2:13b

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# SMTP server settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Sender email address
NOTIFICATION_FROM=reports@example.com

# Comma-separated list of recipients for completed reports
REPORT_RECIPIENTS=analyst1@example.com,analyst2@example.com

# Comma-separated list of recipients for error notifications
ERROR_RECIPIENTS=admin@example.com

# Shared inbox for data questions
SHARED_INBOX_EMAIL=questions@example.com

# Slack webhook URL (optional)
SLACK_WEBHOOK_URL=

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
HB_LOG_LEVEL=INFO
