  "market_signals": {
    "moisture": {
      "drought_stress_developing": {
        "condition": "precip_anomaly_pct < -30 AND consecutive_dry_days > 5",
        "bias": "bullish"
      },
      "below_normal": {
        "condition": "precip_anomaly_pct BETWEEN -30 AND -15",
        "bias": "slight_bullish"
      },
      "near_normal": {
        "condition": "precip_anomaly_pct BETWEEN -15 AND 20",
        "bias": "neutral"
      },
      "above_normal": {
        "condition": "precip_anomaly_pct BETWEEN 20 AND 50",
        "bias": "slight_bearish"
      },
      "excess_moisture": {
        "condition": "precip_anomaly_pct > 50",
        "bias": "context_dependent"
      }
    },
    "temperature": {
      "severe_heat": {
        "condition": "extreme_heat_hours > 4",
        "bias": "bullish_if_critical_stage"
      },
      "moderate_heat": {
        "condition": "heat_stress_hours > 8",
        "bias": "slight_bullish"
      },
      "frost_risk": {
        "condition": "frost_risk = true",
        "bias": "bullish_if_vulnerable"
      }
    }
  }
}
